# Bible Clock Configuration Template
# Copy to .env and modify as needed

# Display Settings
DISPLAY_WIDTH=1872
DISPLAY_HEIGHT=1404
DISPLAY_ROTATION=0
FORCE_REFRESH_INTERVAL=60  # minutes

# Bible API Settings
BIBLE_API_URL=https://bible-api.com
DEFAULT_TRANSLATION=kjv
CACHE_DURATION=3600  # seconds
REQUEST_TIMEOUT=10  # seconds

# Voice Control Settings
ENABLE_VOICE=false
WAKE_WORD=bible
VOICE_RATE=150
VOICE_VOLUME=0.8
PORCUPINE_ACCESS_KEY=your_picovoice_access_key_here
OPENAI_API_KEY=your_openai_api_key_here
ENABLE_CHATGPT_VOICE=true

# System Settings
LOG_LEVEL=INFO
LOG_FILE=/var/log/bible-clock.log
MAX_LOG_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=3

# Memory Management
MEMORY_THRESHOLD=80  # percentage
GC_INTERVAL=300  # seconds

# Web Interface
WEB_ENABLED=true
WEB_PORT=5000
WEB_HOST=0.0.0.0

# Hardware Settings
SIMULATION_MODE=false
SPI_BUS=0
SPI_DEVICE=0
RST_PIN=17
CS_PIN=8
BUSY_PIN=24