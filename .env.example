# Bible Clock Configuration
# Copy this file to .env and modify as needed

# Display Settings
DISPLAY_WIDTH=1872
DISPLAY_HEIGHT=1404
DISPLAY_ROTATION=0
SIMULATION_MODE=false
FORCE_REFRESH_INTERVAL=60

# Bible API Settings
BIBLE_API_URL=https://bible-api.com
DEFAULT_TRANSLATION=kjv
REQUEST_TIMEOUT=10

# Web Interface Settings
WEB_HOST=0.0.0.0
WEB_PORT=5000
WEB_DEBUG=false
WEB_ONLY=false
DISABLE_DISPLAY_UPDATES=false

# Voice Control Settings
ENABLE_VOICE=false
WAKE_WORD=bible clock
VOICE_RATE=150
VOICE_VOLUME=0.8
VOICE_TIMEOUT=5
VOICE_PHRASE_LIMIT=15
VOICE_HELP_ENABLED=true

# ReSpeaker HAT Settings (if using ReSpeaker)
RESPEAKER_ENABLED=false
RESPEAKER_CHANNELS=6
RESPEAKER_SAMPLE_RATE=16000
RESPEAKER_CHUNK_SIZE=1024

# ChatGPT Integration
OPENAI_API_KEY=your_openai_api_key_here
CHATGPT_MODEL=gpt-3.5-turbo
CHATGPT_MAX_TOKENS=500
CHATGPT_TEMPERATURE=0.7
ENABLE_CHATGPT=false
CHATGPT_SYSTEM_PROMPT=You are a knowledgeable biblical scholar and theologian helping users understand Bible verses, biblical history, theology, and Christian faith. Keep responses concise but meaningful, suitable for voice interaction. When referencing the current verse being displayed, you may refer to it directly.

# Voice Command Timeouts
COMMAND_TIMEOUT=30
CHATGPT_TIMEOUT=15
HELP_SECTION_PAUSE=2

# Performance Settings
MEMORY_THRESHOLD=80
GC_INTERVAL=300

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=

# Feature Toggles
ENABLE_STATISTICS=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_HANDLING=true

# Advanced Settings
MAX_RETRIES=3
BACKGROUND_CYCLE_HOURS=4
HEALTH_CHECK_INTERVAL=5

# Development Settings
DEVELOPMENT_MODE=false
FLASK_ENV=production